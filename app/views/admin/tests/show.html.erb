
<div id="container">
  <div id="header">TestGuru</div>
  <div id="sidebar">
    <%= link_to t('.new'), new_admin_test_question_path(@test.id) %>
    <p></p>
    <%= link_to t('.edit'), edit_admin_test_path(@test) %>
    <p></p>
    <%= link_to t('.back'), admin_tests_path %>
  </div>
  <div id="content">
    <h2><%= t('.header', title: @test.title) %></h2>
    <p>
      <strong>Id:</strong>
      <%= @test.id %>
    </p>
      <strong><%= t('.level') %></strong>
      <%= level_test(@test) %>
    </p>
    <p>
      <strong><%= t('.author') %></strong>
      <%= @test.author.last_name %>
    </p>
    <p>
      <strong><%= t('.category') %></strong>
      <%= @test.category.title %>
    </p>
    <p>
      <strong><%= t('.all_test') %></strong>
      <table>
        <tr>
          <th><%= t('.description') %></th>
          <th colspan="3"><%= t('.action') %></th>
        </tr>
        <%= render @test.questions %>
      </table>
    </p>
  </div>
</div>

