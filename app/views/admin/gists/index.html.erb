 <div class="row mb-2">
  <div class="col-md-12 ">
    <div class="flex-md-row mb-4 box-shadow z">
      <div class="card-body d-flex flex-column align-items-start">
        <nav class="navbar navbar-light">
          <span class="navbar-brand mb-0 h1"><h1>Gists</h1></span>
          <ul class="nav justify-content-end">
            <li class="nav-item">
             <%= link_to t('.tests'), admin_tests_path(@test) %>
           </li>
         </ul>
       </nav>
       <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th><%= t('.question') %></th>
              <th><%= t('.email') %></th>
              <th><%= t('.url') %></th>
            </tr>
          </thead>
          <tbody>
           <% @gists.each do |data| %>
            <tr>
              <td><%= link_to data.question.description.slice(0..25), admin_question_path(data.question) %></td>
              <td><%= data.user.email %></td>
              <td><%= link_to 'gist_url', data.gist_url %></td>
            </tr>
           <% end %>
         </tbody>
       </table>
     </div>
   </div>
 </div>
</div>
</div>
