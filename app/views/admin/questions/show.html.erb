<nav class="navbar navbar-light" style="background-color: #e3f2fd">
  <span class="navbar-brand mb-0 h1">TestGuru</span>
  <ul class="nav justify-content-end">
    <li class="nav-item">
      <%= link_to t('.edit'), edit_admin_question_path(@question) %>
    </li>&nbsp;&nbsp;
    <li class="nav-item">
      <%= link_to t('.back'), admin_test_path(@question.test) %>
    </li>&nbsp;&nbsp;
    <li class="nav-item">
      <%= link_to t('.new'), new_admin_question_answer_path(@question) %>
    </li>
  </ul>
</nav>
<div class="container">
  <div class="row mb-2">
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <h2><%= t('.header', title: @question.test.title) %></h2>
          <p>
            <strong>Id:</strong>
            <%= @question.id %>
          </p>
          <p>
            <strong><%= t('.question') %></strong>
            <%= @question.description %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card flex-md-row mb-4 box-shadow h-md-250">
        <div class="card-body d-flex flex-column align-items-start">
          <h2><%= t('.answer') %></h2>
          <table class="table table-striped table-sm">
            <thead>
              <tr>
                <th><%= t('.description') %></th>
                <th colspan="3"><%= t('.action') %></th>
              </tr>
              <%= render @question.answers %>
            </thead>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
