<div id="container">
  <div id="header">TestGuru</div>
  <div id="sidebar">
<p>Number question</p>
<%=  @test_passage.number_question_next  %></br>
<p>Count questions this test</p>
<%=  @test_passage.test.questions.count %>
  </div>
  <div id="content">
    <h2>Passing  <%= @test_passage.test.title %>  the test</h2>
    <p>
      <strong><%= @test_passage.question.description %></strong>
    </p>
    <%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form|  %>
<%= form.collection_check_boxes :answer_ids, @test_passage.question.answers, :id, :body, include_hidden: false do |b| %>
<p>
  <%= b.check_box id: "answer_ids_#{b.object.id}"  %>
  <%= b.label  %>
</p>
<% end  %>
<p>
<%= form.submit "Next"  %>
</p>
<% end %>
  </div>
</div>


















