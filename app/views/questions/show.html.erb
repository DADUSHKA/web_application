<div id="container">
  <div id="header">TestGuru</div>
  <div id="sidebar">
    <%= link_to 'Edit', edit_question_path(@question) %><br><br>
    <%= link_to 'Back to test', test_path(@question.test) %><br><br>
    <%= link_to "New answer", new_question_answer_path(@question) %>
  </div>
  <div id="content">
  <h2>Show <%= @question.test.title %>  Question </h2>
    <p>
    <strong>Id:</strong>
    <%= @question.id %>
    </p>
    <p>
    <strong>Question:</strong>
    <%= @question.description %>
    </p>
    <p>
    <strong>Answer:</strong>
    <ol>
    <%= render @question.answers %>
    </ol>
    </p>
  </div>
</div>


