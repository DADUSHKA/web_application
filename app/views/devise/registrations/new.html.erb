<h1><%= t('.header') %></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

   <div class="field">
    <%= f.label t('.first_name') %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
  </div

   <div class="field">
    <%= f.label t('.last_name') %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
  </div

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label t('.password') %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>  <%= t('.minimum') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label t('.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.registr') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
